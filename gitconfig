[color]
	ui = auto
[core]
	editor = vim
[merge]
	tool = vimdiff
[alias]
    st = status
    ci = commit -v
    co = checkout
    br = branch
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %n %s %Cgreen(%an)%Creset %Cgreen(%cd)%Creset' --abbrev-commit --date=relative
    brinfo = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %n %s %Cgreen(%an)%Creset %Cgreen(%cd)%Creset' --abbrev-commit --date=relative --simplify-by-decoration
    unstage = reset HEAD --
    last = log -1 HEAD
[oh-my-zsh]
	hide-status = 1
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
